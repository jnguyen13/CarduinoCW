<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up"
            android:id="@+id/up_button"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="52dp" android:layout_marginBottom="140dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Down"
            android:id="@+id/down_button"
            android:layout_alignTop="@+id/up_button" android:layout_alignStart="@+id/up_button"
            android:layout_marginTop="56dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right"
            android:id="@+id/right_button"
            android:layout_alignBaseline="@+id/down_button" android:layout_alignBottom="@+id/down_button"
            android:layout_alignParentEnd="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left"
            android:id="@+id/left_button" android:layout_alignTop="@+id/right_button"
            android:layout_toLeftOf="@+id/right_button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power"
            android:id="@+id/power_button"
            android:layout_marginTop="26dp" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>